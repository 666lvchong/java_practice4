<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.4//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wechat_business.entity.Grade">

    <!-- 定义结果集-->
    <resultMap type="wechat_business.entity.Grade" id="gradeMap">
        <id property="id" column="ID"/>
        <result property="gradeNumber" column="GRADE_NUMBER"/>
        <result property="gradeName" column="GRADE_NAME"/>
    </resultMap>
    <!-- 根据id删除 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM GRADE WHERE ID=#{id}
    </delete>
    <!-- 根据多个id删除 -->
    <delete id="deleteByIds" parameterType="java.util.Arrays">
        DELETE FROM GRADE WHERE ID IN
        <foreach collection="array" item="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <!-- 保存 -->
    <insert id="save" parameterType="wechat_business.entity.Grade">
      INSERT INTO GRADE(ID,GRADE_NUMBER,GRADE_NAME) VALUES (#{id},#{gradeNumber},#{gradeName})
    </insert>
    <!-- 修改 -->
    <update id="update" parameterType="wechat_business.entity.Grade">
        UPDATE GRADE SET GRADE_NUMBER=#{gradeNumber},GRADE_NAME=#{gradeName} WHERE ID=#{id}
    </update>
    <!-- 根据id查询 -->
    <select id="findById" parameterType="java.lang.Long" resultMap="gradeMap">
        SELECT ID,GRADE_NUMBER,GRADE_NAME FROM GRADE WHERE ID=#{id}
    </select>
    <!-- 根据条件查询 -->
    <select id="findByCondtion" parameterType="stringObjectMap" resultMap="gradeMap">
        SELECT ID,GRADE_NUMBER,GRADE_NAME FROM GRADE WHERE 1=1
        <if test="@Ognl@isNotEmpty(GRADE_NAME)">
            AND GRADE_NAME LIKE #{gradeName}
        </if>
    </select>
    <!-- 根据条件分页查询 -->
    <select id="findByCondtionForPage" parameterType="stringObjectMap" resultMap="gradeMap">
        SELECT ID,GRADE_NUMBER,GRADE_NAME FROM GRADE WHERE 1=1
        <if test="@Ognl@isNotEmpty(GRADE_NAME)">
            AND GRADE_NAME LIKE #{gradeName}
        </if>
    </select>
</mapper>